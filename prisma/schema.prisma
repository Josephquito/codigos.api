generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique // Email de acceso: √∫nico global
  password  String
  role      UserRole @default(USER)

  isActive  Boolean  @default(true)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  imapAccounts       ImapAccount[]
  gmailTokens        GmailToken[]
  platformAccessKeys PlatformAccessKey[]

  @@map("users")
}

model ImapAccount {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")

  email     String   // Puede repetirse en distintos usuarios
  password  String
  active    Boolean  @default(true)

  // ‚úÖ Diferenciaci√≥n funcional (no t√©cnica): la cuenta se usa como catch-all
  isCatchAll Boolean @default(false) @map("is_catch_all")

  // ‚úÖ Config IMAP por cuenta (multi-dominio real)
  imapHost  String   @map("imap_host")
  imapPort  Int      @default(993) @map("imap_port")
  useTls    Boolean  @default(true) @map("use_tls")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isCatchAll]) // √∫til para buscar catch-alls del usuario
  @@unique([userId, email])     // Unicidad por usuario
  @@map("imap_accounts")
}

model GmailToken {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")

  email     String   // Puede repetirse en distintos usuarios
  token     Json     @db.JsonB
  active    Boolean  @default(true)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([userId, email]) // Unicidad por usuario
  @@map("gmail_tokens")
}

model PlatformAccessKey {
  id               Int      @id @default(autoincrement())
  userId           Int

  emailAlias       String
  plataforma       String
  clave            String

  passwordChangeAt DateTime
  active            Boolean @default(true)

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // üîí p√∫blico
  @@unique([plataforma, emailAlias, clave])

  // üîê privado (panel)
  @@unique([userId, plataforma, emailAlias])

  @@index([userId])
}

